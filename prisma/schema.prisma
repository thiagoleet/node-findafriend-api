generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String   @id @default(uuid())
  name          String
  address       String
  phone         String
  email         String   @unique
  password_hash String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  Pet           Pet[]

  @@map("orgs")
}

model Pet {
  id      String @id @default(uuid())
  name    String
  species String

  age       Int
  weight    Float
  orgId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  org       Org      @relation(fields: [orgId], references: [id])

  @@unique([orgId, name])
  @@index([orgId])
  @@map("pets")
}
